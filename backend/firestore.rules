rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Demo collection for stack demo (read/write for demo purposes)
    match /demoItems/{itemId} {
      allow read, write: if request.time < timestamp.date(2027, 1, 1);
    }
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 3, 29);
    }
  }
}
